{
   "version": "2.0.0",
   "tasks": [
      {
         "label": "Test",
         "command": "./node_modules/.bin/jest",
         "presentation": {
            "showReuseMessage": false,
            "clear": true
         },
         "args": ["--verbose"],
         "type": "shell",
         "group": "test",
         "problemMatcher": []
      },
      {
         "label": "Build",
         "command": "./node_modules/.bin/tsc",
         "args": ["--project", "tsconfig.build.json"],
         "presentation": {
            "clear": true
         },
         "type": "shell",
         "group": "build",
         "problemMatcher": ["$tsc"]
      },
      {
         "label": "Publish",
         "command": "npm",
         "args": ["publish"],
         "presentation": {
            "clear": true
         },
         "type": "shell",
         "group": "none",
         "problemMatcher": []
      },
      {
         "label": "List Production Dependencies",
         "command": "npm",
         "args": ["ls", "-prod=true"],
         "type": "shell",
         "presentation": {
            "echo": false,
            "reveal": "always",
            "focus": true,
            "panel": "shared"
         },
         "problemMatcher": []
      },
      {
         "label": "Example: Bundle",
         "command": "${workspaceFolder}/node_modules/.bin/webpack",
         "options": {
            "cwd": "${workspaceFolder}/node_modules/@toba/example/"
         },
         "presentation": {
            "echo": false,
            "showReuseMessage": false,
            "clear": true
         },
         "type": "shell",
         "problemMatcher": []
      },
      {
         "label": "Example: Web",
         "command": "${workspaceFolder}/node_modules/.bin/webpack-dev-server",
         "options": {
            "cwd": "${workspaceFolder}/node_modules/@toba/example/build"
         },
         "type": "shell",
         "problemMatcher": []
      },
      {
         "label": "Example: iOS",
         "command": "${workspaceFolder}/node_modules/.bin/react-native",
         "args": ["run-ios"],
         "options": {
            "cwd": "${workspaceFolder}/node_modules/@toba/example"
         },
         "presentation": {
            "echo": false,
            "clear": true
         },
         "problemMatcher": []
      },
      {
         "label": "Example: Link",
         "command": "ln",
         "args": [
            "-s",
            "${workspaceFolder}/node_modules/react-native/",
            "${workspaceFolder}/node_modules/@toba/example/node_modules/"
         ],
         "presentation": {
            "clear": true
         },
         "problemMatcher": []
      },
      {
         "label": "Example: CLI",
         "command": "node",
         "args": [
            "${workspaceFolder}/node_modules/react-native/local-cli/cli.js",
            "start"
         ],
         "options": {
            "cwd": "${workspaceFolder}/node_modules/@toba/example"
         },
         "presentation": {
            "echo": false,
            "clear": true
         },
         "problemMatcher": []
      },
      {
         "label": "Example: Android",
         "command": "${workspaceFolder}/node_modules/.bin/react-native",
         "args": ["run-android"],
         "options": {
            "cwd": "${workspaceFolder}/node_modules/@toba/example/src"
         },
         "presentation": {
            "echo": false,
            "clear": true
         },
         "problemMatcher": []
      }
   ]
}
